        let hamOpen = false
        $('.ham').onClick(function() {
            hamOpen = !hamOpen
            if(hamOpen){
                $('.ham').removeClass('open')
                $('.ham-menu').removeClass('open')
            }else{
                $('.ham').addClass('open')
                $('.ham-menu').addClass('open')
            }
            return
        })
